<?xml version="1.0" encoding="UTF-8"?>
<entity-facade-xml xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/entity-definition-3.xsd">

    <entity entity-name="DurChatSession" package-name="durion.chat" table-name="DUR_CHAT_SESSION">
        <field name="chatSessionId" type="id" is-pk="true"/>
        <field name="partyId" type="id" description="Owner/initiator of the chat session"/>
        <field name="agentTypeEnumId" type="id" description="Type of agent backing this chat (MCP, LLM, etc)"/>
        <field name="startedDate" type="date-time"/>
        <field name="lastUpdatedStamp" type="date-time"/>
        <field name="statusId" type="id"/>

        <relationship type="many" related-entity-name="DurChatMessage" fk-name="CHAT_SESSION"/>
    </entity>

</entity-facade-xml>
