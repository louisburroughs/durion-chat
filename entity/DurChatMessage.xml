<?xml version="1.0" encoding="UTF-8"?>
<entity-facade-xml xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/entity-definition-3.xsd">

    <entity entity-name="DurChatMessage" package-name="durion.chat" table-name="DUR_CHAT_MESSAGE">
        <field name="chatMessageId" type="id" is-pk="true"/>
        <field name="chatSessionId" type="id"/>
        <field name="fromRoleTypeId" type="id" description="Who sent the message: USER, AGENT, SYSTEM"/>
        <field name="messageText" type="text-long"/>
        <field name="sentDate" type="date-time"/>

        <relationship type="one" related-entity-name="DurChatSession" fk-name="CHAT_SESSION" rel-optional="false">
            <key-map field-name="chatSessionId" related-field-name="chatSessionId"/>
        </relationship>
    </entity>

</entity-facade-xml>
